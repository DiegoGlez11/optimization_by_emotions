<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <!-- sirve de base de datos -->
    <node name="server_db_node"
        pkg="neurocontroller_database"
        type="server_db"
        respawn="false"
        output="screen"
        launch-prefix="gnome-terminal --tab --" />


    <!-- NODOS DEL CICLO EEG -->
    <!-- control del casco EEG -->
    <node name="eeg_controller_node"
        pkg="eeg_signal_acquisition"
        type="eeg_controller"
        respawn="false"
        output="screen"
        launch-prefix="gnome-terminal --tab --" />


    <!-- gui para controlar el experimento -->
    <node name="run_gui_control"
        pkg="experiment_control_interfaces"
        type="start_gui.sh"
        respawn="false"
        output="screen"
        launch-prefix="gnome-terminal --tab --" />

    <!-- gui para el usuario -->
    <node name="run_gui_protocol"
        pkg="emotion_evocation_protocol"
        type="start_gui.sh"
        respawn="false"
        output="screen"
        launch-prefix="gnome-terminal --tab --" />

</launch>